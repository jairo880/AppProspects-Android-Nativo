<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:forceHasOverlappingRendering="false"
    android:background="#e7e7e7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/design_snackbar_background_color">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:id="@+id/imageView4"
                android:layout_alignTop="@+id/nameprospects"
                android:layout_toLeftOf="@+id/nameprospects"
                android:layout_toStartOf="@+id/nameprospects"
                android:layout_marginTop="10dp"
                android:src="@drawable/information" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/prospectname"
                    android:layout_marginTop="20dp"
                    android:textSize="25dp"
                    android:text="prospectname"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/abc_primary_text_material_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="prospectsurname"
                    android:id="@+id/prospectsurname"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/surnameprospect"
                    android:layout_alignStart="@+id/surnameprospect"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/abc_primary_text_material_dark" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Address:"
                android:id="@+id/textView3"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5"
                android:textColor="@color/abc_primary_text_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="prospectaddres"
                android:id="@+id/prospectaddress"
                android:layout_marginTop="20dp"
                android:textColor="@color/abc_primary_text_material_dark" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telephone:"
                android:id="@+id/textView4"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5"
                android:textColor="@color/abc_primary_text_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="prospecttelephone"
                android:id="@+id/prospecttelephone"
                android:layout_marginTop="20dp"
                android:textColor="@color/abc_primary_text_material_dark" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Observation:"
                android:id="@+id/textView7"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5"
                android:textColor="@color/abc_primary_text_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="prospectobservation"
                android:id="@+id/prospectobservation"
                android:layout_marginTop="20dp"
                android:textColor="@color/abc_primary_text_material_dark" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>